{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowImportingTsExtensions": false,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@go17/components": ["../../packages/components/src/index.ts"],
      "@go17/components/*": ["../../packages/components/src/*"],
      "@go17/hooks": ["../../packages/hooks/src/index.ts"],
      "@go17/hooks/*": ["../../packages/hooks/src/*"]
    }
  },
  "include": ["vite.config.ts", "src"]
}
